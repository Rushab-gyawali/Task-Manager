@model MVCERP.Shared.Common.BackLogCommon
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MeroTaskMainLayout.cshtml";
}

<h2>List of All Task</h2>
<script src="~/Scripts/jquery-1.8.2.min.js"></script>
@section scripts{

    <script src="~/UI/MeroTaskDashboard/vendor/datatables/js/jquery.dataTables.min.js"></script>

}


<script type="text/javascript">
    debugger;
    $(document).ready(function () {
        debugger;
        $('#BackLogTaskList').DataTable({
            "responsive": true,
            "processing": false,
            "serverSide": false,
            "searchDelay": 1500,
            "ajax": {
                "type": 'z',
                "dataType": 'json',
                "url": "/BackLog/ListBackLogTask",
                "contentType": 'application/json; charset=utf-8',
                'data': function (data) {
                    return data = JSON.stringify(data);
                }
            },
            lengthMenu:
                [
                    [25, 50, 100],
                    ['25', '50', '100']
                ],
            "language": {
                "search": "",
                "searchPlaceholder": "Search..."
            },
            columns: [

                { 'data': 'sn', "orderable": false },
                { 'data': 'TaskName', "orderable": true, "searchable": true },
                { 'data': 'TaskDescription', "orderable": true },
                { 'data': 'TaskReportedDate', "orderable": true },
                { 'data': 'DiscussionDate', "orderable": true },
                { 'data': 'Owner', "orderable": false },
                { 'data': 'ClientId', "orderable": false },
                { 'data': 'StoryPoint', "orderable": false },

                { 'data': 'CreatedBy', "orderable": false },
                { 'data': 'CreatedDate', "orderable": false },
                { 'data': 'Action', "orderable": false },

            ],
            "columnDefs":
                [
                    { "className": "dt-center", "targets": "4" },
                    //  { "targets": 1, "className": "text-right" }
                ]
        });
    });

</script>

<div class="container listing-container">
    <div class="panel panel-default">
        <div class="panel-heading list-heading">
            <div class="panel-body list-body">
                <div class="table-responsive">

                    <table id="BackLogTaskList" class="table table-hover" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>S No.</th>
                                <th>Task Name</th>
                                <th>Task Description</th>
                                <th>Task Reported Date</th>
                                <th>Discussion Date</th>
                                <th>Owner</th>
                                <th>Client Name</th>
                                <th>Story point</th>
                                <th>Created By</th>
                                <th>Created Date</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



