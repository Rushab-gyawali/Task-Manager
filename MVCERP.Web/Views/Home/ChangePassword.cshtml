@model  MVCERP.Web.Models.ChangePasswordModel
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/MeroTaskMainLayout.cshtml";
    var user = MVCERP.Web.Library.StaticData.GetUser();
}

<div class="container manage-container">
    @using (Html.BeginForm("ChangePassword", "Home", new { }, FormMethod.Post, new { @role = "form", @id = "Home" }))
    {

        @Html.AntiForgeryToken()
        if (!Html.ViewData.ModelState.IsValid)
        {
            var resp = MVCERP.Web.Library.StaticData.GetSessionMessage();
            if (null != resp)
            {
                @section Message
                {
                    <script type="text/javascript">
                        ManageMessage(@resp.ErrorCode, "@resp.Message");
                    </script>
                }
            }

        }

        <div class="form-horizontal manage-body">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h4 class="panel-title">Change Password</h4>
                </div>
                <div class="panel-body">
                    <div>
                        @Html.HiddenFor(x => x.ID, new { @class = "form-control" })
                        @Html.HiddenFor(x => x.OldCheckPassword, new { @class = "form-control" })
                    </div>
                    <div class="col-md-12">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label"> User Name <span class="text-danger"> *</span></label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(x => x.UserName, new { @placeholder = @user, @class = "form-control", @id = "UserName", @disabled = "on" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label"> Old Password</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.OldPassword, new { @class = "form-control", @required = "required", @placeholder = "Enter Old Password" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label"> New Password</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control", @required = "required", @placeholder = "Enter New Password" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label class="col-sm-4 control-label"> Confirm Password</label>
                                    <div class="col-sm-8">
                                        @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control", @required = "required", @placeholder = "Enter Confirm Password" })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group form-action">
                                    @*<a onclick="GoBack();" class="btn btn-default"><i class="mdi mdi mdi-arrow-left"></i> Back </a>*@
                                    <button type="submit" class="btn btn-success"><i class="mdi mdi-check-circle-outline"></i> Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>