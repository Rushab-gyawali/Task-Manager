@model MVCERP.Web.Models.TaskReportingModel

@{
    ViewBag.Title = "UserDetail";
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}
<link href="~/UI/css/user.profile.css" rel="stylesheet" />
<style>
</style>

<div class="container row">
    <div class="container-fluid col-md-4" style=" background: linear-gradient( 135deg, #e03051 0%, #e75c76 100%);height:85vh;">
        <div class="user-profile">
            <div class="user-detail">
                <h3>
                        @ViewBag.user
                </h3>
            </div>
            <div>
                <img src="~/Images/user.png" alt="Alternate Text" class="img-fluid" />
            </div>
        </div>
        <hr />
        @using (Html.BeginForm("Search", "TaskManager", FormMethod.Post, new { @id = "taskform" }))
        {

    <div class="form-group">
        <label for="Status" class="text-white">Status</label>
        @Html.DropDownListFor(m => m.Status, ViewData["StatusList"] as IEnumerable<SelectListItem>, new { @class = "form-control", @required = "required" })
    </div>

            <button type="submit" class="btn btn-danger" id="btnsearch">Search</button>
        }
    </div>
    <div class="col-md-8">
        <div class="container-fluid">
            <div class="form-head d-flex mb-3 align-items-start">
                <div class="mr-auto d-none d-lg-block">
                    <h2 class="text-black font-w600 mb-0">Dashboard</h2>
                    <p class="mb-0">Welcome to @ViewBag.user !</p>
                </div>
            </div>

            <div class="task-list">
            <div class="row">
                <div class="col-md-3">
                    <div class="widget-stat card">
                        <div class="card-body p-4">
                            <div class="media ai-icon">
                                <div class="mr-3 bgl-primary text-primary">
                                    <!-- <i class="ti-user"></i> -->
                                    <div class="media-body">
                                        <h3 class="mb-0 text-black"><span class="counter ml-0">56</span></h3>
                                        <p class="mb-0">InProgress Task</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="widget-stat card">
                        <div class="card-body p-4">
                            <div class="media ai-icon">
                                <div class="mr-3 bgl-primary text-primary">
                                    <!-- <i class="ti-user"></i> -->

                                    <div class="media-body">
                                        <h3 class="mb-0 text-black"><span class="counter ml-0">126</span>k</h3>
                                        <p class="mb-0">Completed Task</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="widget-stat card">
                        <div class="card-body p-4">
                            <div class="media ai-icon">
                                <div class="mr-3 bgl-primary text-primary">
                                    <!-- <i class="ti-user"></i> -->

                                    <div class="media-body">
                                        <h3 class="mb-0 text-black"><span class="counter ml-0">279</span></h3>
                                        <p class="mb-0">Testing Task</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="widget-stat card">
                        <div class="card-body p-4">
                            <div class="media ai-icon">
                                <div class="mr-3 bgl-primary text-primary">
                                    <!-- <i class="ti-user"></i> -->

                                    <div class="media-body">
                                        <h3 class="mb-0 text-black"><span class="counter ml-0">65</span></h3>
                                        <p class="mb-0">Total Assigned Task</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            </div>
            </div>
        </div>
    </div>


